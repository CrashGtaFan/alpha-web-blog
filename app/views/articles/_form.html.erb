<div class='row'>
  <div class='col-md-6 col-sm-12 offset-md-3'>
    <%= render 'partials/errors', obj: @article %>
  </div>
</div>
<div class='row'>
  <div class='col-md-6 col-sm-12 offset-md-3'>
    <%= form_for(@article, html: { class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <%= f.label :title, class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
      </div>
      <div class='form-group'>
        <%= f.label :description, class: 'control-label' %>
        <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Enter description' %>
      </div>
      <div class='form-group'>
        <%= f.label :categories, class: 'control-label' %>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
          <div class='col-md-3'>
            <%= cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text} %>
          </div>
        <% end %>
      </div>
      <%= link_to "Back to articles listing", articles_path, class: 'btn btn-outline-info' %> |
      <%= f.submit class: 'btn btn-outline-success' %>
    <% end %>
  </div>
</div>
