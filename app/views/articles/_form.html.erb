<div class='row'>
  <div class='col-md-6 col-sm-12 offset-md-3'>
    <% if @article.errors.any? %>
      <div class="alert alert-dismissible alert-danger">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <h4>The following errors prevented the article from getting created!</h4>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
<div class='row'>
  <div class='col-md-6 col-sm-12 offset-md-3'>
    <%= form_for(@article, html: { class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <%= f.label :title, class: 'control-label' %>
        <%= f.text_field :title, class: 'form-control', placeholder: 'Enter title' %>
      </div>
      <div class='form-group'>
        <%= f.label :description, class: 'control-label' %>
        <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Enter description' %>
      </div>
      <%= link_to "Back to articles listing", articles_path, class: 'btn btn-outline-info' %> |
      <%= f.submit class: 'btn btn-outline-success' %>
    <% end %>
  </div>
</div>
