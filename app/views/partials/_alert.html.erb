<% if flash.any? %>
  <% flash.each do |name, message| %>
    <div class='alert alert-dismissible alert-<%="#{name}" %>'>
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= content_tag :div, message, :id => "flash_#{name}" if message.is_a?(String) %>
    </div>
  <% end %>
<% end %>
