<div class='row'>
  <div class='col-md-6 col-sm-12 offset-md-3'>
    <%= render 'partials/errors', obj: @category %>
  </div>
</div>
<div class='row'>
  <div class='col-md-6 col-sm-12 offset-md-3'>
    <%= form_for(@category, html: { class: 'form-horizontal', role: 'form'}) do |f| %>
      <div class='form-group'>
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter title' %>
      </div>
      <%= link_to "Back to categories listing", categories_path, class: 'btn btn-outline-info' %> |
      <%= f.submit class: 'btn btn-outline-success' %>
    <% end %>
  </div>
</div>
