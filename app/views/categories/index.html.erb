<h1 align="center">Listing All Categories</h1>
<div align="center">
  <% @categories.each do |category| %>
    <ul class="listing">
      <div class="row">
        <div class="card col-md-4 offset-md-4 col-sm-12">
          <li class="article-title">
            <h2>
              <%= link_to "#{category.name}", category_path(category) %>
            </h2>
            <p>
              <%= "Articles count: #{category.articles.count}" %>
            </p>
          </li>
        </div>
      </div>
    </ul>
  <% end %>
  <div class="col-md-4 offset-md-2 col-sm-12">
    <center>
      <%= will_paginate %>
    </center>
  </div>
</div>
