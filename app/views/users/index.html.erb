<h1 align="center">All Alpha Bloggers</h1>
<div class='row'>
  <div class="col-sm offset-sm-5">
    <%= will_paginate %>
  </div>
</div>
<div align="center">
   <% @users.each do |user| %>
      <ul class="listing">
         <div class="row">
            <div class="card col-md-4 offset-md-4">
               <li><%= link_to gravatar_for(user), user_path(user) %></li>
               <li class="article-title">
                  <%= link_to user.username, user_path(user) %>
               </li>
               <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
               <% if logged_in? && (current_user.admin? && current_user != user) %>
                 <li>
                    <%= link_to 'Destroy user', user_path(user), method: :delete,
                          class: "btn btn-danger btn-sm",
                          data: { confirm: "Are you sure to destroy #{user.username}" } %>
                 </li>
                 <br>
               <% end %>
            </div>
         </div>
      </ul>
   <% end %>
</div>
<div class='row'>
  <div class="col-sm offset-sm-5">
    <%= will_paginate %>
  </div>
</div>
